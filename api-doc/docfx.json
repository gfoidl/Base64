{
    "metadata": [
        {
            "src": [
                {
                    "cwd": "../",
                    "files": [
                        "source/**.csproj"
                    ]
                }
            ],
            "dest": "api",
            "filter": "filterConfig.yml",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "globalMetadata": {
            "_appTitle": "gfoidl.Base64",
            "_appFooter": "Copyright © Foidl Günther 2018-2020",
            "_appLogoPath": "images/logo_32.png",
            "_appFaviconPath": "null"
        },
        "dest": "_site",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "default"
        ],
        "postProcessors": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false
    }
}
